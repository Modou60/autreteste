{% extends 'base.html.twig' %}

{% block title %}Bienvenu(e) à la page des locations!{% endblock %}

{% block body %}
<style>
    .contenu { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .contenu { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="contenu">
    <h1> Bienvenu(e) à la page des locations!✅</h1>
<br/><br/>
<hr/>
<br/><br/>

<table border="1">

<tbody>
<thead>
<tr>
<th> id </th>
<th> Date </th>
<th> Titre </th>
<th> Catégorie </th>
<th> Description </th>
<th> Valeur </th>
<th> Adresse </th>
<th> Accessibilitéy </th>
<th> à la une </th>
<th> Image </th>
<th> Action </th>
</tr>
</thead>

{% for location in locations %}
<tr>
<td> {{ location.id }} </td>
<td> {{ location.date|date("D/M/Y") }} </td>
<td> {{ location.titre }} </td>
<td> {{ location.categorie }} </td>
<td> {{ location.description }} </td>
<td> {{ location.valeur }} </td>
<td> {{ location.adresse }} </td>
<td> {{ location.accessibility }} </td>
<td> {{ location.alaune }} </td>
<td> {{ location.image }} </td>

<td> <a href="{{ path('location_id', {'id':location.id})}}"> Voir la location numéro {{ location.id }} </a></td>
</tr>
{% else %}
					<tr>
						<td colspan="5">Vous n'avez pas d'enregistrement!
						</td>
					</tr>
{% endfor %}

</tbody>
</table>
    
    </div>

    <br/>

    <ul>
    <li> <a href="{{ path('locform')}}"> Enregistrer une nouvelle location </a> </li>    
<li> <a href="{{ path('demarrage')}}"> Revenir à l'accueil </a> </li>    
    </ul>
{% endblock %}
