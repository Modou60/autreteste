{% extends "base.html.twig" %}

{% block title %}
	L'affichage des données d'un utilisateur
{% endblock %}

{% block body %}
	<div>
		<h1>
			Les données de l'utilisateur numéro {{ abonne.id }}
		</h1>

		<br/><br/>
		<hr/>
		<br/><br/>

		<table class="table" border="1">
			<tbody>
			<thead>
				<tr>
					<th>
						id
					</th>
					<th>
						nom
					</th>
					<th>
						prenom
					</th>
					<th>
						dateNaissance
					</th>
					<th>
						photo
					</th>
					<th>
						login
					</th>
					<th>
						passWord
					</th>
					<th>
						adresse
					</th>
					<th>
						email
					</th>
					<th>
						role
					</th>
				</tr>
			</thead>

			<tr>
				<td>{{abonne.id}}</td>
				<td>{{abonne.nom}}</td>
				<td>{{abonne.prenom}}</td>
				<td>{{abonne.dateNaissance|date("d/m/Y")}}</td>
				<td>{{abonne.photo}}</td>
				<td>{{abonne.login}}</td>
				<td>{{abonne.passWord}}</td>
				<td>{{abonne.adresse}}</td>
				<td>{{abonne.email}}</td>
				<td>{{abonne.role}}</td>
			</tr>
		</tbody>
	</table>
	<ul>
	<li> <a href="{{ path('utilisateur') }}"> Revenir à la page des utilisateurs </a> </li>
	<li> <a href="{{ path('demarrage') }}"> Revenir à la page d'accueil </a> </li>
	</ul>
</div>
{% endblock %}
