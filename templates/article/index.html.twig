{% extends 'base.html.twig' %}

{% block title %}Gestion des articles!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div>
		<h1>
			Bienvenu(e) à la page de gestion des articles! ✅</h1>
	</div>
	<br/><br/>
	<hr/>
	<br/>
	<div id="menu" class=""></div>

	<div id="contenu" class="">
		<table class="table">

			<tbody>

				{% for article in articles %}
					{# https://twig.symfony.com/doc/3.x/tags/for.html #}
					<tr>
						<td>{{ article.id }}</td>
						<td>{{ article.Title }}</td>
						<td>{{ article.Contenu }}</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
	</div>

	<br/><br/>
	<hr/>
	<br/>
	<div id="footer" class=""></div>
{% endblock %}
